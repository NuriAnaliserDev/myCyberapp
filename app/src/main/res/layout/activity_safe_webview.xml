<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#121212"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:layout_marginEnd="8dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:tint="@color/cyber_primary"/>

            <TextView
                android:id="@+id/tvUrlBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="https://..."
                android:textColor="#FFFFFF"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingEnd="8dp"
                android:background="@drawable/bg_glass_card"
                android:padding="8dp"/>

            <ToggleButton
                android:id="@+id/toggleJs"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:textOn="JS ON"
                android:textOff="JS OFF"
                android:textSize="12sp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/btn_neon"
                android:textColor="@color/cyber_primary"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/cyber_primary"
        android:visibility="visible"/>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
