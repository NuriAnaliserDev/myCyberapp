<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/item_background"
    android:layout_marginBottom="8dp">

    <!-- Asosiy, ko'rinadigan qism -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/anomaly_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_shield_check" 
            app:tint="@color/neon_red" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/anomaly_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shubhali tarmoq harakati"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/anomaly_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:45 AM"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/expand_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right" 
            app:tint="@color/text_secondary" />

    </LinearLayout>

    <!-- Kengayadigan, yashirin qism -->
    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/anomaly_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tafsilotlar: com.whatsapp ilovasi notanish 123.45.67.89 manziliga ulandi."
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/block_ip_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Manzilni bloklash"
                android:textColor="@color/neon_red" />

            <Button
                android:id="@+id/uninstall_app_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Ilovani oÊ»chirish"
                android:textColor="@color/yellow" />

            <Button
                android:id="@+id/mark_normal_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Oddiy holat"
                android:textColor="@color/safe_green" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>