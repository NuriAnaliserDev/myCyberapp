<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/bg_glass_card"
    android:padding="12dp">

    <!-- Severity Indicator -->
    <View
        android:id="@+id/severity_indicator"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/cyber_alert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/anomaly_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="12:45 PM"
        android:textColor="@color/cyber_primary"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/severity_indicator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/anomaly_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Suspicious activity detected in Calculator"
        android:textColor="@color/cyber_text_primary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/severity_indicator"
        app:layout_constraintTop_toBottomOf="@id/anomaly_timestamp" />

    <Button
        android:id="@+id/mark_normal_button"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARK SAFE"
        android:textColor="@color/cyber_secondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anomaly_description" />

</androidx.constraintlayout.widget.ConstraintLayout>