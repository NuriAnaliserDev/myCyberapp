<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Skip Button -->
    <TextView
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O'tkazib yuborish"
        android:textColor="#80FFFFFF"
        android:textSize="14sp"
        android:padding="16dp"
        android:letterSpacing="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:padding="16dp"
        android:letterSpacing="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Glassmorphism Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/glass_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_glass_onboarding"
        android:padding="24dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_container"
        app:layout_constraintTop_toBottomOf="@id/btn_skip">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/onboarding_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/anim_shield"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/onboarding_title"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/onboarding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.05"
            android:gravity="center"
            android:shadowColor="#00E5FF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            app:layout_constraintBottom_toTopOf="@id/onboarding_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/onboarding_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body text goes here..."
            android:textColor="#CCFFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Container (Dots & Button) -->
    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Dots Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">
            
            <ImageView
                android:id="@+id/dot_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_dot_filled"
                android:layout_marginEnd="12dp"/>
            
            <ImageView
                android:id="@+id/dot_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_dot_empty"
                android:layout_marginEnd="12dp"/>
            
            <ImageView
                android:id="@+id/dot_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_dot_empty"
                android:layout_marginEnd="12dp"/>

            <ImageView
                android:id="@+id/dot_4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_dot_empty"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/btn_neon_outline"
            android:text="@string/onboarding_next"
            android:textColor="#00E5FF"
            android:textSize="16sp"
            android:letterSpacing="0.1"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
