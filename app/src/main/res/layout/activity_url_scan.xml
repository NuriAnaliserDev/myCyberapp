<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="24dp"
        app:tint="@color/cyber_primary"
        xmlns:app="http://schemas.android.com/apk/res-auto"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHISHGUARD SCAN"
        android:textSize="24sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/cyber_primary"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checking URL..."
        android:textSize="16sp"
        android:textColor="@color/cyber_text_secondary"
        android:layout_marginBottom="32dp"
        android:gravity="center"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/cyber_primary"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tvVerdict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvReasons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/cyber_alert"
        android:layout_marginBottom="32dp"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOpenAnyway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPEN ANYWAY (RISKY)"
        android:background="@drawable/btn_neon"
        android:textColor="@color/cyber_alert"
        android:textStyle="bold"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGoBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO BACK TO SAFETY"
        android:background="@drawable/btn_neon"
        android:textColor="@color/cyber_primary"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

</LinearLayout>
